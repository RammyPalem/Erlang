{
  "Resources": {
    "MyLaunchTemplate": {
      "Type": "AWS::EC2::LaunchTemplate",
      "Properties": {
        "LaunchTemplateName": "MyUbuntu20Instance",
        "VersionDescription": "Initial version",
        "LaunchTemplateData": {
          "InstanceType": "t2.micro",
          "KeyName": "your-key-pair-name",
          "ImageId": "ami-0c55b159cbfafe1f0", // Ubuntu 20.04 AMI ID
          "UserData": {
            "Fn::Base64": {
              "Fn::Sub": "#!/bash -ex\n\
              # Your custom user data script here"
            }
          }
        }
      }
    },
    "MyAutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "LaunchTemplate": {
          "LaunchTemplateName": {
            "Ref": "MyLaunchTemplate"
          },
          "Version": "$Latest"
        },
        "MinSize": "1", // Minimum number of instances
        "MaxSize": "4", // Maximum number of instances
        "DesiredCapacity": "2", // Desired number of instances
        "VPCZoneIdentifier": ["subnet-12345678", "subnet-87654321"], // Replace with your subnet IDs
        "AvailabilityZones": ["us-east-1a", "us-east-1b"], // Replace with your AZs
        "Tags": [
          {
            "Key": "Name",
            "Value": "MyAutoScalingInstance",
            "PropagateAtLaunch": true
          }
        ]
      }
    }
  }
}